<% include ../partials/header %>
<h1>Create a New Campground</h1>

<div class="container">
	<div class="row">
		<h1>Add new comment tp <%= campground.name %></h1>
		<form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="comment[text]" value ="<%= comment.text %>">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="comment[author]" placeholder="author">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-default">Submit!</button>
			</div>		    
		</form>
	</div>
</div>

<a href="/campgrounds">Go Back</a>
<% include ../partials/footer %>
